import java.io.File;
import java.nio.file.Files;
import java.nio.file.Path;

public class Main {
    public static void main(String[] args) {
        // Obter o caminho do diret贸rio raiz do sistema
        File rootDir = new File("/");
        
        // Converter o caminho do diret贸rio raiz para um objeto Path
        Path rootPath = rootDir.toPath();
        
        // Listar todos os arquivos e diret贸rios no diret贸rio raiz
        try {
            Files.list(rootPath).forEach(System.out::println);
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
