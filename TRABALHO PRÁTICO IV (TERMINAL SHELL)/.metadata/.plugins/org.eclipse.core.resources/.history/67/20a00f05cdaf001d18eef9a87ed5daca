import java.io.File;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;

public class AcoesExibir {
    public static void main(String[] args) {
        // Obter o caminho do diret칩rio "Documents" no diret칩rio do usu치rio atual
        String userHome = System.getProperty("user.home");
        Path docDir = Paths.get(userHome, "");

        // Listar todos os arquivos e diret칩rios na pasta "Documents"
        try {
            Files.list(docDir).forEach(System.out::println);
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
